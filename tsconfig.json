{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2019",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "esModuleInterop": true,
    "declaration": false,
    "declarationMap": false,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/index.js"]
}
